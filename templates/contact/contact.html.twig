{% extends 'base.html.twig' %}

{% block body %}
    <h1>Contact Us</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.message) }}

        <button type="submit" class="btn btn-primary">Send</button>
    {{ form_end(form) }}
{% endblock %}
